<?xml version="1.0"?>
<robot name="moving_face">

  <!-- Root link (fixed in place via Gazebo props) -->
  <link name="z_cube">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
               iyy="0.01" iyz="0"
               izz="0.01"/>
    </inertial>
  </link>

  <!-- Intermediate cube -->
  <link name="x_cube">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
               iyy="0.01" iyz="0"
               izz="0.01"/>
    </inertial>
  </link>

  <!-- Big blue cube (the visible target) -->
  <link name="cube_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.2 0.2"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.2 0.2"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
               iyy="0.01" iyz="0"
               izz="0.01"/>
    </inertial>
  </link>

  <!-- Vertical prismatic joint (z) -->
  <joint name="z_joint" type="prismatic">
    <parent link="z_cube"/>
    <child link="x_cube"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.5" upper="0.5" effort="10" velocity="2.0"/>
    <dynamics damping="0.5" friction="0.1"/>
  </joint>

  <!-- Horizontal prismatic joint (x) -->
  <joint name="x_joint" type="prismatic">
    <parent link="x_cube"/>
    <child link="cube_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.5" upper="0.5" effort="10" velocity="2.0"/>
    <dynamics damping="0.5" friction="0.1"/>
  </joint>

  <!-- Make z_cube effectively fixed: no gravity, kinematic -->
  <gazebo reference="z_cube">
    <gravity>false</gravity>
    <kinematic>true</kinematic>
  </gazebo>

  <!-- Plugin to control z_joint and x_joint via /set_joint_trajectory -->
  <gazebo>
    <plugin name="lift_controller" filename="libgazebo_ros_joint_pose_trajectory.so">
      <update_rate>20</update_rate>
      <joint_name>z_joint</joint_name>
      <joint_name>x_joint</joint_name>
    </plugin>
  </gazebo>

  <!-- Optional: publish joint_states so you can debug -->
  <gazebo>
    <plugin name="moving_face_joint_states" filename="libgazebo_ros_joint_state_publisher.so">
      <update_rate>20</update_rate>
      <joint_name>z_joint</joint_name>
      <joint_name>x_joint</joint_name>
    </plugin>
  </gazebo>

</robot>
