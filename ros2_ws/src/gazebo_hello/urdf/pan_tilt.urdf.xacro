<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

    <!-- Include common materials and inertial macros -->
    <xacro:include filename="example_include.xacro" />
    <xacro:include filename="camera.xacro" />


    <!-- Empty world link -->
    <link name="world"></link>

    <!-- Fixed joint from world to base_link (like the example) -->
    <joint name="base_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="world"/>
        <child link="base_link"/>        
    </joint>

    <!-- ===================== -->
    <!--  PANâ€“TILT ROBOT BODY  -->
    <!-- ===================== -->

    <!-- Base Link -->
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0.025" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="gray">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.025" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.025" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.000625"/>
        </inertial>
    </link>

    <!-- Pan Link -->
    <link name="pan_link">
        <visual>
            <origin xyz="0 0 0.035" rpy="0 0 0"/>
            <geometry>
                <box size="0.04 0.06 0.07"/>
            </geometry>
            <material name="blue">
                <color rgba="0.2 0.4 0.8 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.035" rpy="0 0 0"/>
            <geometry>
                <box size="0.04 0.06 0.07"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.035" rpy="0 0 0"/>
            <mass value="0.3"/>
            <!-- inertia from your original URDF -->
            <inertia ixx="0.000155" ixy="0" ixz="0" iyy="0.000143" iyz="0.00004" izz="0.000155"/>
        </inertial>
    </link>

    <!-- Pan Joint -->
    <joint name="pan_joint" type="continuous">
        <parent link="base_link"/>
        <child link="pan_link"/>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14159" upper="3.14159" effort="10" velocity="2.0"/>
        <dynamics damping="0.5" friction="0.1"/>
    </joint>

    <!-- Tilt Link -->
    <link name="tilt_link">
        <visual>
            <origin xyz="0.03 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.06 0.05 0.04"/>
            </geometry>
            <material name="red">
                <color rgba="0.8 0.2 0.2 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.03 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.06 0.05 0.04"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0.03 0 0" rpy="0 0 0"/>
            <mass value="0.2"/>
            <inertia ixx="0.000027" ixy="0" ixz="0" iyy="0.000067" iyz="0" izz="0.000047"/>
        </inertial>
    </link>

    <!-- Tilt Joint -->
    <joint name="tilt_joint" type="revolute">
        <gravity>false</gravity>
        <parent link="pan_link"/>
        <child link="tilt_link"/>
        <origin xyz="0 0 0.07" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-1.57079" upper="1.57079" effort="10" velocity="2.0"/>
        <dynamics damping="0.5" friction="0.1"/>
    </joint>



    <!-- Gazebo-specific stuff (materials, plugins, depth camera, etc.) -->
    <xacro:include filename="example_gazebo.xacro" />

</robot>